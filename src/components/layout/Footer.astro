---
const currentPath = Astro.url.pathname;
const currentLang = currentPath.startsWith('/es') ? 'es' : 'en';

const t = {
  description:
    currentLang === 'es'
      ? 'Desarrollador frontend apasionado por crear sitios accesibles y rápidos con tecnologías modernas.'
      : 'A frontend developer who loves crafting accessible and fast websites with modern technologies.',

  sectionOther: currentLang === 'es' ? 'Otros' : 'Other',

  nav: {
    projects: currentLang === 'es' ? 'Proyectos' : 'Projects',
    tech: currentLang === 'es' ? 'Tecnologías' : 'Tech Stack',
    services: currentLang === 'es' ? 'Servicios' : 'Services',
    contact: currentLang === 'es' ? 'Contacto' : 'Contact',
  },

  copyright:
    currentLang === 'es'
      ? 'Todos los derechos reservados.'
      : 'All rights reserved.',
};

import { Github, Linkedin, Mail, FileText } from 'lucide-static';
import GitHubLastUpdated from '../../utils/GitHubLastUpdated.astro';
const currentYear = new Date().getFullYear();
---

<footer
  class="bg-custom-bg text-zinc-400 text-sm px-6 md:px-12 py-12 border-t border-zinc-800"
>
  <div
    class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-6 gap-10 items-center"
  >
    <div class="space-y-4 md:col-span-2">
      <h2 class="text-white font-semibold text-lg">Dennis Landaverde</h2>
      <p>
        {t.description}
      </p>
      <div class="flex gap-4 pt-2 text-zinc-500">
        <a
          href="https://github.com/Dennis006Al"
          class="hover:text-white"
          aria-label="GitHub"
        >
          <span set:html={Github} class="w-5 h-5 inline-block" />
        </a>
        <a
          href="https://www.linkedin.com/in/dennis-landaverde-873a07284/"
          class="hover:text-white"
          aria-label="LinkedIn"
        >
          <span set:html={Linkedin} class="w-5 h-5 inline-block" />
        </a>
        <a
          href="/[Dennis Landaverde] Engineer_Profile.pdf"
          target="_blank"
          class="hover:text-white"
          aria-label="Resume"
        >
          <span set:html={FileText} class="w-5 h-5 inline-block" />
        </a>
        <a
          href="mailto:dennislandaverde13@email.com"
          class="hover:text-white"
          aria-label="Email"
        >
          <span set:html={Mail} class="w-5 h-5 inline-block" />
        </a>
      </div>
    </div>

    <div class="hidden md:block"></div>
    <div class="hidden md:block"></div>

    <div>
      <h3 class="text-white font-medium mb-2">Me</h3>
      <ul class="space-y-1">
        <li>
          <a href={`/${currentLang}/projects`} class="hover:text-white"
            >{t.nav.projects}</a
          >
        </li>
        <li>
          <a href={`/${currentLang}#tech`} class="hover:text-white"
            >{t.nav.tech}</a
          >
        </li>
        <li>
          <a href={`/${currentLang}#services`} class="hover:text-white"
            >{t.nav.services}</a
          >
        </li>
        <li>
          <a href={`/${currentLang}#contact`} class="hover:text-white"
            >{t.nav.contact}</a
          >
        </li>
      </ul>
    </div>

    <div>
      <h3 class="text-white font-medium mb-2">Other</h3>
      <ul class="space-y-1">
        <li><a href="#projects" class="hover:text-white">?</a></li>
        <li><a href="#tech" class="hover:text-white">?</a></li>
        <li><a href="#services" class="hover:text-white">?</a></li>
        <li><a href="#contact" class="hover:text-white">?</a></li>
      </ul>
    </div>
  </div>

  <div
    class="flex flex-col md:flex-row justify-between items-center gap-4 pt-12"
  >
    <p class="text-zinc-400 text-center">
      © {currentYear}
      <span class="text-white hover:text-white">Dennis</span>. {t.copyright}
    </p>
    <GitHubLastUpdated />
  </div>
</footer>
