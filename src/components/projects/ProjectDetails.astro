---
import TechStackDisplay from './TechStackDisplay.astro';

interface Details {
  overview: string;
  objective: string;
  techStack: string[];
  contributions: string[];
  reflection: string;
}

const { details } = Astro.props as { details: Details };
---

<div class="max-w-2xl">
  <h2 class="text-xl font-bold text-white mt-12 mb-4">Overview</h2>
  <p class="text-zinc-400">{details.overview}</p>

  <h2 class="text-xl font-bold text-white mt-12 mb-4">Objective</h2>
  {
    details.objective
      .split('\n\n')
      .map((paragraph) => <p class="text-zinc-400 mb-4">{paragraph}</p>)
  }

  <h2 class="text-xl font-bold text-white mt-12 mb-4">Tech Stack Used</h2>
  <TechStackDisplay stack={details.techStack} />

  <h2 class="text-xl font-bold text-white mt-12 mb-4">Key Contributions</h2>
  <ul class="list-disc list-inside text-zinc-300">
    {details.contributions.map((item) => <li>{item}</li>)}
  </ul>

  <h2 class="text-xl font-bold text-white mt-12 mb-4">Reflection</h2>
  <p class="text-zinc-400">{details.reflection}</p>
</div>
