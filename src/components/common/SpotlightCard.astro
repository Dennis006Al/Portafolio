---
interface Props {
  title: string;
  description: string;
  year: number;
  image: string;
  link: string;
}

const { title, description, year, image, link } = Astro.props;
---

<a
  href={link}
  rel="noopener noreferrer"
  class="group spotlight-card relative overflow-hidden rounded-3xl bg-[#0B0F19] border border-[#1a1a1a] shadow-inner p-6 max-w-sm text-white transition"
>
  <div
    class="spotlight pointer-events-none absolute left-0 top-0 h-full w-full bg-[radial-gradient(200px_circle_at_var(--x,50%)_var(--y,50%),rgba(255,255,255,0.05),transparent)] opacity-0 transition-opacity duration-300 group-hover:opacity-100"
  >
  </div>

  <div class="relative z-10 flex flex-col h-full gap-[0.6rem]">
    <img
      src={image}
      alt={title}
      class="w-full aspect-[4/3] object-contain rounded-xl border border-zinc-800 transition-transform duration-300 ease-out group-hover:scale-105"
      loading="lazy"
    />

    <p class="text-lg font-bold text-white mt-4">{year}</p>
    <h3 class="text-lg font-semibold leading-snug">{title}</h3>
    <p class="text-sm text-zinc-400 flex-grow">{description}</p>

    <span class="mt-4 inline-block text-sm text-emerald-400 link-underline">
      Read more
    </span>
  </div>
</a>
