---
import '~/styles/global.css';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Keyboard from '../../components/common/Keyboard.astro';
import SectionTag from '../../components/common/SectionTag.astro';
import SpotlightCard from '~/components/common/SpotlightCard.astro';
---

<BaseLayout lang="en" title="Dennis">
  <main class="w-full px-4 sm:px-8 lg:px-32 2xl:px-64 pt-24 font-sans">
    <!-- Sección de presentación -->
    <section class="flex flex-col gap-8">
      <div
        class="enter-animation inline-flex items-center gap-3 border border-[#52525bbf] rounded-full px-3 py-1.5 w-fit"
      >
        <span class="relative flex h-3 w-3">
          <span
            class="absolute inline-flex h-full w-full animate-ping rounded-full bg-green-500 opacity-75"
          ></span>
          <span class="relative inline-flex h-3 w-3 rounded-full bg-green-500"
          ></span>
        </span>
        <span class="text-xs tracking-wider">Available</span>
      </div>

      <h1
        id="hero-title"
        class="enter-animation tracking-tight leading-[1.05] font-serif text-[clamp(2rem,7vw,3.5rem)] text-left"
      >
        Hi, I'm &lt;Dennis/&gt;<br />A frontend engineer.
      </h1>

      <p class="enter-animation max-w-[600px] text-lg text-zinc-300">
        I build exceptional digital experiences with Angular, React, Astro and
        modern web technologies. Currently focused on creating accessible,
        performant interfaces.
      </p>

      <Keyboard class="enter-animation" />
    </section>

    <!-- Projects -->
    <section class="mt-32 scroll-mt-[7rem]" id="projects">
      <SectionTag label="Projects" icon="Briefcase" />

      <!-- Título y descripción + botón alineado -->
      <div
        class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-[42px] mt-8"
      >
        <div class="pl-2">
          <h1
            id="hero-title"
            class="tracking-tight leading-[1.05] font-serif text-[clamp(1rem,7vw,3rem)]"
          >
            Work and Learning journey
          </h1>
          <p class="max-w-[700px] text-md text-zinc-400 mt-2">
            Each project challenged me with unique problems, becoming a stepping
            stone in my growth. Through research and creativity, I turned
            obstacles into valuable learning moments.
          </p>
        </div>

        <!-- Botón superior derecho -->
        <a
          href="/projects"
          class="group btn-glow-pulse relative inline-flex h-12 items-center justify-center overflow-hidden rounded-md bg-neutral-950 px-6 font-medium text-neutral-200 border border-white transition-all duration-300 ease-out"
        >
          <div
            class="translate-x-0 opacity-100 transition-all duration-300 group-hover:-translate-x-[150%] group-hover:opacity-0"
          >
            View all projects
          </div>

          <div
            class="absolute translate-x-[150%] opacity-0 transition-all duration-300 group-hover:translate-x-0 group-hover:opacity-100"
          >
            <svg
              width="15"
              height="15"
              viewBox="0 0 15 15"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
            >
              <path
                d="M8.14645 3.14645C8.34171 2.95118 8.65829 2.95118 8.85355 3.14645L12.8536 7.14645C13.0488 7.34171 13.0488 7.65829 12.8536 7.85355L8.85355 11.8536C8.65829 12.0488 8.34171 12.0488 8.14645 11.8536C7.95118 11.6583 7.95118 11.3417 8.14645 11.1464L11.2929 8H2.5C2.22386 8 2 7.77614 2 7.5C2 7.22386 2.22386 7 2.5 7H11.2929L8.14645 3.85355C7.95118 3.65829 7.95118 3.34171 8.14645 3.14645Z"
                fill="currentColor"
                fill-rule="evenodd"
                clip-rule="evenodd"></path>
            </svg>
          </div>
        </a>
      </div>

      <!-- Cartas de proyectos -->
      <div class="flex flex-col md:flex-row gap-8">
        <SpotlightCard
          title="Keymar LabelTech"
          description="Full redesign focused on SEO, content optimization, and a cleaner user experience. Built with Astro for speed and visibility. Integrated a working contact form and multiple call-to-actions across the site."
          year={2024}
          image="/assets/keymar-label-tech.webp"
          link="/projects/keymar-labeltech"
        />
        <SpotlightCard
          title="Athenas GYM"
          description="Responsible for support and maintenance of the gym's internal app. Fixed critical bugs in the contract system and improved the digital signing workflow. Built with Angular and Laravel."
          year={2025}
          image="/assets/athens-fitness-club.webp"
          link="/projects/athenas-gym"
        />
      </div>
    </section>

    <!-- Technologies -->
    <section class="mt-32 scroll-mt-[7rem]" id="tech">
      <SectionTag label="Tech stack" icon="Cpu" />
    </section>

    <!-- Services -->
    <section class="mt-32 scroll-mt-[7rem]" id="services">
      <SectionTag label="Services" icon="Wrench" />
    </section>

    <!-- Contact -->
    <section class="mt-32 scroll-mt-[7rem]" id="contact">
      <SectionTag label="Contact" icon="Mail" />
    </section>
  </main>

  <style is:global>
    .drop-shadow-green {
      filter: drop-shadow(0px 0px 8px #59ff7e);
    }

    .enter-animation {
      opacity: 0.025;
      animation: fade-in-bottom 0.45s cubic-bezier(0.39, 0.575, 0.565, 1)
        forwards;
    }

    .enter-animation:nth-child(2) {
      animation-delay: 0.2s;
    }

    .enter-animation:nth-child(3) {
      animation-delay: 0.4s;
    }

    .enter-animation:nth-child(4) {
      animation-delay: 0.6s;
    }

    @keyframes fade-in-bottom {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
  <!-- @ts-ignore -->
  <script type="module" is:browser src="/src/lib/scripts/spotlight.ts"></script>
  <!-- @ts-ignore -->
  <script is:browser type="module" src="/src/lib/scripts/scrollspy.ts"></script>
  <!-- @ts-ignore -->
  <script is:browser type="module" src="/src/lib/scripts/highlight-on-navbar.ts"
  ></script>
</BaseLayout>
